{
  "name": "aurora-ui-plus",
  "version": "0.1.2",
  "description": "A personal learning project - Vue 3 UI component library built with TypeScript and Tailwind CSS",
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "components",
    "tailwind",
    "typescript"
  ],
  "author": "gaofei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaofei/AuroraUI.git"
  },
  "homepage": "https://github.com/gaofei/AuroraUI#readme",
  "bugs": {
    "url": "https://github.com/gaofei/AuroraUI/issues"
  },
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/aurora-ui-plus.es.js",
      "require": "./dist/aurora-ui-plus.umd.js"
    },
    "./style": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:lib": "BUILD_LIB=true vite build && npm run build:types",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "prepublishOnly": "npm run build:lib",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:full": "./scripts/test.sh",
    "dev:examples": "cd examples && pnpm dev",
    "build:examples": "cd examples && pnpm build"
  },
  "peerDependencies": {
    "vue": ">=3.2.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@vueuse/core": "^13.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.540.0",
    "pinia": "^3.0.3",
    "reka-ui": "^2.4.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "unplugin-vue-components": "^28.8.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
